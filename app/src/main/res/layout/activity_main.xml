<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.testshop.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@drawable/bg_round_search_tran"
        android:hint="@string/share_tip"
        android:textSize="14sp"
        android:gravity="center"
        android:textColorHint="@color/gray_edit_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:focusable="false"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tbl_main"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        app:tabIndicatorColor="#EF8092"
        app:tabSelectedTextColor="#333333"
        app:tabTextColor="#999999"
        />



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"></android.support.v4.view.ViewPager>




</LinearLayout>
