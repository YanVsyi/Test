<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_item_g_icon"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_item_g_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="瑞可爷爷蛋糕 蜂蜜蛋糕 蛋糕很好吃很好吃"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_666"
        />

    <TextView
        android:id="@+id/tv_item_g_yuan_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="淘宝价格￥136.00"
        android:textSize="13sp"
        android:textColor="@color/gray_999"
        android:drawableLeft="@mipmap/tb"
        android:drawablePadding="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@+id/tv_item_g_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥17.00"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@mipmap/dou"
        android:drawableRight="@mipmap/tab"
        android:drawablePadding="6dp"
        android:layout_marginTop="10.5dp"
        />



    <TextView
        android:id="@+id/tv_item_g_ftab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再返￥6"
        android:textSize="9sp"
        android:layout_marginLeft="8dp"
        android:textColor="#EF8092"
        android:background="@drawable/box_stock_red"
        android:padding="3dp"
        android:layout_marginTop="9dp"
        />

</LinearLayout>
